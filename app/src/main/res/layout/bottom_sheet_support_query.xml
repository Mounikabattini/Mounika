<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_20">

        <ImageView
            android:id="@+id/imgCross"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/ic_add"
            android:rotation="45"
            android:layout_margin="@dimen/dp_5"
            android:padding="@dimen/dp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:hint="@string/enter_query_title"
            android:textColor="@color/app_color"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_corner_gray_border"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingHorizontal="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_10"
            android:layout_marginHorizontal="@dimen/dp_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgCross"/>

        <EditText
            android:id="@+id/edtQuery"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:hint="@string/enter_query"
            android:textColor="@color/app_color"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_corner_gray_border"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingHorizontal="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_10"
            android:layout_marginHorizontal="@dimen/dp_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTitle"/>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:background="@drawable/rounded_corner_appcolor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtQuery"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
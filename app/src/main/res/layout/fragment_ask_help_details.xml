<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/layDonationId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:paddingVertical="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/donation_id"
                    android:textSize="@dimen/dp_15"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray4"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDonationId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/dp_15"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray2"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layDonationId">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/category"
                    android:textSize="@dimen/dp_15"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray4"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/table"
                    android:textSize="@dimen/dp_15"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray2"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layAuthor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layCategory">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/category"
                    android:textSize="@dimen/dp_15"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray4"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAuthor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/furniture"
                    android:textSize="@dimen/dp_15"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray2"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/laySubCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layAuthor">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/subcategory"
                    android:textSize="@dimen/dp_15"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray4"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtBinding"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/table"
                    android:textSize="@dimen/dp_15"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray2"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/laySubCategory">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/description1"
                    android:textSize="@dimen/dp_15"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray4"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/demo_small_text"
                    android:textSize="@dimen/dp_15"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray2"/>

            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/gray1"
                android:layout_marginTop="@dimen/dp_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layDescription"/>

            <TextView
                android:id="@+id/HeadingMiddle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/ask_help_person_details"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15"
                android:fontFamily="@font/roboto_medium"
                android:paddingVertical="@dimen/dp_4"
                android:paddingHorizontal="@dimen/dp_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view1"/>

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/gray1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/HeadingMiddle"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDonateItemList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>